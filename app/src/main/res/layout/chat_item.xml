<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--http://www.codeproject.com/Tips/897826/Designing-Android-Chat-Bubble-Chat-UI-->
    <TextView
        android:id="@+id/date_show_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/chat_messager_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/patient_smiley"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/patient_smiley" />

        <TextView
            android:id="@+id/chat_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/patient_smiley"
            android:maxWidth="240dp"
            android:paddingLeft="30dp"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>