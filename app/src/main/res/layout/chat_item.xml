<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/pad_10dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="horizontal">
        <!--http://www.codeproject.com/Tips/897826/Designing-Android-Chat-Bubble-Chat-UI-->
        <ImageButton
            android:id="@+id/patient_smiley"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/pad_5dp"
            android:background="@drawable/patient_smiley" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bg_left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chat_messager_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date_show_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/pad_10dp"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:layout_marginStart="@dimen/pad_10dp"
                    android:gravity="center_horizontal"
                    android:paddingRight="@dimen/pad_10dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/chat_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/pad_10dp"
                android:maxWidth="260dp"
                android:padding="@dimen/pad_5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:typeface="normal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">
        <!--http://www.codeproject.com/Tips/897826/Designing-Android-Chat-Bubble-Chat-UI-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bg_right"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/chat_messager_name_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date_show_tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/chat_messager_name_right"
                    android:layout_marginEnd="@dimen/pad_10dp"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:layout_marginRight="@dimen/pad_10dp"
                    android:layout_marginStart="@dimen/pad_10dp"
                    android:gravity="right"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/chat_message_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/pad_10dp"
                android:maxWidth="260dp"
                android:padding="@dimen/pad_5dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:typeface="normal" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/doctor_smiley"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/pad_5dp"
            android:background="@drawable/doctor_smiley" />

    </LinearLayout>
</RelativeLayout>